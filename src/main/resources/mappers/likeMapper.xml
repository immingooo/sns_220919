<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.dao.LikeDAO">
 	<select id="selectLikeByPostIdUserId" parameterType="map" resultType="boolean">
 		SELECT
 			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
			AND `userId` = #{userId}
 	</select>
 	
 	<select id="selectLikeCountByPostId" parameterType="int" resultType="int">
 		SELECT
 			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
 	</select>
 	
 	<select id="selectLikeCountByPostIdOrUserId" parameterType="map" resultType="int">
 		SELECT
 			COUNT(*)
		FROM
			`like`
		WHERE
			`postId` = #{postId}
			<if test="userId != null">
			AND `userId` = #{userId}
			</if>
 	</select>
 	
 	<delete id="deleteLikeByPostIdUserId" parameterType="map">
 		DELETE
 		FROM
 			`like`
 		WHERE
 			`postId` = #{postId}
			AND `userId` = #{userId}
 	</delete>
 	
 	<insert id="insertLikeByPostIdUserId" parameterType="map">
 		INSERT INTO `like`
 		(
 			`userId`
			,`postId`
			,`createdAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{postId}
 			, NOW()
 		)
 	</insert>
 </mapper>